  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "contact": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "phoneNumber",
          "contactType",
          "userId"
        ],
        "properties": {
          "_id": {
            "description": "Contact id",
            "type": "string",
            "example": "67d732c77a417803516efe34"
          },
          "name": {
            "description": "Contact name",
            "type": "string",
            "example": "Test"
          },
          "phoneNumber": {
            "description": "Contact phone number",
            "type": "string",
            "example": "+380123456789"
          },
          "email": {
            "description": "Contact email address",
            "type": "string",
            "example": "test@gmail.com"
          },
          "contactType": {
            "description": "Contact type",
            "type": "string",
            "enum": [
              "work",
              "personal",
              "home"
            ]
          },
          "isFavourite": {
            "description": "Whether is contact is favourite",
            "type": "boolean",
            "example": true
          },
          "userId": {
            "description": "Contact owner id",
            "type": "string",
            "example": "67d71ffe96b5ef8e6981ebfc"
          },
          "photo": {
            "description": "Link to contact photo",
            "type": "string",
            "example": "https://res.cloudinary.com/dz7onxpzw/image/upload/v1709758144/contacts/default_contact_photo.jpg"
          }
        }
      },
      "user": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password"
        ],
        "properties": {
          "name": {
            "description": "User name",
            "type": "string",
            "example": "Test"
          },
          "email": {
            "description": "User email address",
            "type": "string",
            "example": "test@gmail.com"
          },
          "password": {
            "description": "User password",
            "type": "string",
            "format": "password",
            "writeOnly": true
          }
        }
      }
    },
    "responses": {
      "400": {
